<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="103.0" prefWidth="307.0" spacing="5.0" xmlns="http://javafx.com/javafx/21.0.8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.overb.jsontocsv.controllers.Preferences">
    <CheckBox fx:id="cbDarkMode" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" prefHeight="17.0"
              text="Dark mode"/>
    <CheckBox fx:id="cbAutoConvert" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" prefHeight="17.0"
              selected="true" text="Automatically detect data root in JSON on load">
        <VBox.margin>
            <Insets top="4.0"/>
        </VBox.margin>
    </CheckBox>
    <CheckBox fx:id="cbSnakeCase" mnemonicParsing="false" prefHeight="17.0" selected="true"
              text="Default to snake case for CSV columns" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets top="4.0"/>
        </VBox.margin>
    </CheckBox>
    <HBox fillHeight="false" VBox.vgrow="NEVER">
        <children>
            <CheckBox fx:id="cbLimitPreview" mnemonicParsing="false" selected="true" text="Limit preview rows:"
                      HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets top="4.0"/>
                </HBox.margin>
            </CheckBox>
            <TextField fx:id="txtLimit" maxHeight="25.0" maxWidth="50.0" minHeight="25.0" minWidth="50.0"
                       prefHeight="25.0" prefWidth="50.0" text="100">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </TextField>
        </children>
    </HBox>
    <HBox fillHeight="false" layoutX="20.0" layoutY="68.0" spacing="10.0">
        <children>
            <Label text="NULL in CSV:">
                <padding>
                    <Insets top="1.0"/>
                </padding>
            </Label>
            <RadioButton fx:id="cbNullEmpty" mnemonicParsing="false" selected="true" text="Empty">
                <toggleGroup>
                    <ToggleGroup fx:id="toggleNullTypeGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="cbNullNull" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="NULL"
                         toggleGroup="$toggleNullTypeGroup"/>
        </children>
    </HBox>

    <HBox alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="386.0" spacing="5.0">
        <Button onAction="#onCancel" text="Cancel"/>
        <Button onAction="#onOk" text="OK"/>
        <VBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </VBox.margin>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
