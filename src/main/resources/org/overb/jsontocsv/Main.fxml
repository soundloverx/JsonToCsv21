<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" xmlns="http://javafx.com/javafx/21.0.8"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.overb.jsontocsv.controllers.Main">
    <items>
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
            <items>
                <TextArea fx:id="jsonTextArea" minHeight="200" promptText="JSON Input"
                          SplitPane.resizableWithParent="true"/>

                <VBox minWidth="250">
                    <children>
                        <HBox maxHeight="40.0" maxWidth="200.0" minHeight="40.0" minWidth="200.0" prefHeight="40.0"
                              prefWidth="200.0" spacing="5.0">
                            <children>
                                <Button fx:id="newButton" maxWidth="Infinity">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-fast-backward" iconSize="24"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="New JSON and CSV"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="openJsonButton" maxWidth="Infinity">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-folder-open-o" iconSize="24"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Open JSON file"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="saveCsvButton" maxWidth="Infinity">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-save" iconSize="24"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Save CSV"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="addCsvColumn" maxWidth="Infinity">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-plus" iconSize="24"/>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Add CSV column"/>
                                    </tooltip>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="5.0" top="5.0"/>
                            </padding>
                        </HBox>

                        <TableView fx:id="columnDefinitionsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="csvNameColumn" editable="false" text="CSV" reorderable="false"/>
                                <TableColumn fx:id="jsonPathColumn" editable="false" text="JSON" reorderable="false"/>
                                <TableColumn fx:id="customColumn" editable="false" maxWidth="50.0" minWidth="50.0"
                                             prefWidth="50.0" resizable="false" sortable="false" text="Custom"
                                             reorderable="false"/>
                            </columns>
                        </TableView>

                    </children>
                </VBox>
            </items>
        </SplitPane>
        <TableView fx:id="csvTableView" minHeight="200" SplitPane.resizableWithParent="true"/>
        <ToolBar maxHeight="20.0" minHeight="20.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="20.0">
            <items>
                <Label alignment="CENTER_RIGHT" text="Copyright Â© 2025, Cristi Stan">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
            </items>
        </ToolBar>
    </items>
</SplitPane>
