<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefHeight="270.0" prefWidth="638.0"
           xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.overb.jsontocsv.controllers.Main">
    <items>
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
            <items>
                <VBox minWidth="200.0" spacing="2.0">
                    <children>
                        <TextField fx:id="txtSchemaSearch" promptText="Search schema (name or path)"/>
                        <TreeView fx:id="tvJsonSchema" minHeight="200.0" showRoot="false" VBox.vgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </padding>
                </VBox>
                <VBox minWidth="250" spacing="2.0">
                    <children>
                        <HBox fillHeight="false" prefWidth="200.0">
                            <children>
                                <MenuBar maxHeight="25.0" minHeight="25.0" HBox.hgrow="NEVER">
                                    <menus>
                                        <Menu mnemonicParsing="false" text="File">
                                            <items>
                                                <MenuItem fx:id="mnuLoadJson" mnemonicParsing="false"
                                                          onAction="#mnuLoadJsonFile" text="Load JSON file..."/>
                                                <MenuItem fx:id="mnuSaveCsv" mnemonicParsing="false" onAction="#saveCsv"
                                                          text="Save CSV..."/>
                                                <SeparatorMenuItem/>
                                                <MenuItem fx:id="mnuLoadCsvDefinition" mnemonicParsing="false"
                                                          onAction="#mnuLoadCsvDefinitions"
                                                          text="Load CSV definitions..."/>
                                                <MenuItem fx:id="mnuSaveCsvDefinition" mnemonicParsing="false"
                                                          onAction="#saveCsvDefinitions"
                                                          text="Save CSV definitions..."/>
                                                <SeparatorMenuItem/>
                                                <Menu fx:id="mnuRecentFiles" mnemonicParsing="false"
                                                      text="Recent files"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem fx:id="mnuPreferences" mnemonicParsing="false"
                                                          text="Preferences..."/>
                                                <MenuItem fx:id="mnuUpdate" mnemonicParsing="false"
                                                          text="Check for updates"/>
                                            </items>
                                        </Menu>
                                        <Menu mnemonicParsing="false" text="Actions">
                                            <items>
                                                <MenuItem fx:id="mnuAddDefinition" mnemonicParsing="false"
                                                          text="Add column definition...">
                                                    <accelerator>
                                                        <KeyCodeCombination alt="UP" code="F4" control="UP" meta="UP"
                                                                            shift="UP" shortcut="UP"/>
                                                    </accelerator>
                                                </MenuItem>
                                                <MenuItem fx:id="mnuRefresh" mnemonicParsing="false" text="Refresh">
                                                    <accelerator>
                                                        <KeyCodeCombination alt="UP" code="F5" control="UP" meta="UP"
                                                                            shift="UP" shortcut="UP"/>
                                                    </accelerator>
                                                </MenuItem>
                                                <SeparatorMenuItem/>
                                                <MenuItem fx:id="mnuResetDefinitions" mnemonicParsing="false"
                                                          onAction="#resetDefinitions" text="Reset definitions"/>
                                                <MenuItem fx:id="mnuResetAll" mnemonicParsing="false"
                                                          onAction="#resetEverything" text="Reset all"/>
                                            </items>
                                        </Menu>
                                    </menus>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </MenuBar>
                                <Label contentDisplay="CENTER" text="Root:">
                                    <HBox.margin>
                                        <Insets left="15.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="txtRoot" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>

                        <TableView fx:id="tblColumnDefinitions" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="csvNameColumn" editable="false" reorderable="false" text="CSV"/>
                                <TableColumn fx:id="jsonPathColumn" editable="false" reorderable="false" text="JSON"/>
                                <TableColumn fx:id="customColumn" editable="false" maxWidth="50.0" minWidth="50.0"
                                             prefWidth="50.0" reorderable="false" resizable="false" sortable="false"
                                             text="Custom"/>
                            </columns>
                        </TableView>

                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
        <TableView fx:id="tblCsvPreview" minHeight="200" SplitPane.resizableWithParent="true">
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </TableView>
        <ToolBar maxHeight="22.0" minHeight="22.0" prefHeight="22.0">
            <items>
                <Label text="Columns:"/>
                <Label fx:id="lblColumnsCount" text="0">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Separator orientation="VERTICAL"/>
                <Label text="Preview rows:"/>
                <Label fx:id="lblPreviewRowsCount" text="0">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Separator orientation="VERTICAL"/>
                <Label text="Preview time:"/>
                <Label fx:id="lblPreviewTime" text="-">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblVersion" text="v0">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
            </items>
        </ToolBar>
    </items>
</SplitPane>
