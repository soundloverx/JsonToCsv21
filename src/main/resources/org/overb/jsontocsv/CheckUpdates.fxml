<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane minWidth="280.0" prefHeight="100.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/21.0.8"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.overb.jsontocsv.controllers.CheckUpdates"
           fx:id="formContainer">
    <children>
        <VBox minWidth="250.0" prefHeight="200.0" prefWidth="100.0" fx:id="mainVbox">
            <children>
                <VBox minHeight="50.0" minWidth="250.0">
                    <children>
                        <Label fx:id="lblCurrent" text="Current version: ">
                            <padding>
                                <Insets left="10.0" top="10.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="lblRemote" layoutX="10.0" layoutY="10.0" text="Remote version: ">
                            <padding>
                                <Insets left="10.0" top="10.0"/>
                            </padding>
                        </Label>
                    </children>
                </VBox>
                <TextArea fx:id="txtNotes" editable="false" minWidth="240.0" wrapText="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </TextArea>
                <HBox alignment="CENTER_RIGHT" fillHeight="false" maxHeight="40.0" minHeight="40.0" minWidth="250.0"
                      prefHeight="40.0" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="btnDownload" disable="true" mnemonicParsing="false" onAction="#download"
                                text="Download"/>
                        <Button fx:id="btnOK" mnemonicParsing="false" onAction="#okAction" text="OK"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" right="10.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
